{
    "name": "nooblab-desktop",
    "version": "1.0.0",
    "description": "NoobLab Desktop Application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder"
    },
    "author": "JayNightmare",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "dotenv": "^17.2.3",
        "monaco-editor": "^0.55.1",
        "mongoose": "^9.0.1",
        "wait-on": "^7.2.0",
        "xterm": "^5.3.0",
        "xterm-addon-fit": "^0.8.0"
    },
    "build": {
        "appId": "com.nooblab.desktop",
        "productName": "NoobLab Desktop",
        "win": {
            "target": "nsis"
        },
        "files": [
            "**/*",
            "target/NoobLab.jar",
            "src/main/webapp/**/*",
            "!src/main/java",
            "!pom.xml",
            "!*.md"
        ]
    }
}
